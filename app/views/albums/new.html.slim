.container
  h1
    | New album
  .row
    .col-md-6.col-md-offset-3
      = form_for(@album) do |f|
        = f.label :title
        = f.text_field :title, class: 'form-control'
        = f.fields_for :picture_attributes do |p|
          = p.file_field :file
        = f.submit "Create Album"
        = link_to 'Back', albums_path
