<div class="row">
<div data-spy="affix" id="dot-nav">
      <ul>
        <li class="awesome-tooltip active" title="1"><a href="#home"></a></li>
        <li class="awesome-tooltip" title="2"><a href="#about"></a></li>
        <li class="awesome-tooltip" title="3"><a href="#projects"></a></li>
      </ul>
  </div>
    <div id="main" >
      <section id="home">
      <div class="container">
          <h1>Fresh albums<small> newly added albums</small></h1>
            <div class="row-album">
            <% @new_albums.each do |album| %>
              <%= link_to image_tag(album.picture.file, class: "img-rounded img-album ", width: "180px"), album_path(album) %>
            <% end %>
          </div>
        </div>
      </section>
        <section id="about">
        <div class="container">
          <h1>My playlists<small> beloved music here </small><%= link_to "", new_playlist_path(:playlist), class:"glyphicon glyphicon-plus-sign" %><%= link_to "", playlists_path, class:"glyphicon glyphicon-list-alt" %></h1>
            <div class="row-album">
            <% @playlists.each do |playlist| %>
              <%= link_to image_tag(playlist.picture.file, class: "img-rounded img-album ", width: "180px"), playlist_path(playlist) %>
            <% end %>
        </div>
        </div>
        </section>
        <section id="projects">
        <div class="container">
          <h1>All albums<small> greatest music </small><%= link_to "", albums_path, class:"glyphicon glyphicon-folder-open" %></h1>
            <div class="row-album">
            <% @albums.each do |album| %>
              <%= link_to image_tag(album.picture.file, class: "img-rounded img-album ", width: "180px"), album_path(album) %>
            <% end %>
        </div>
        </div>
        </section>
    </div>
</div>